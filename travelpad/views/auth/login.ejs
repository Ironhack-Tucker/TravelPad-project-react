<header><div class="logo"> <img src="/favicon.gif" alt=""> <span>TravelPad</span></div>
  <div class="logNav">
<% if (user != undefined) { %>
  <%=user.username%> /
  <a href="/logout">Logout</a>
<%} else {%>
  <a href="/signup">Signup</a>
<% } %>
  </div>
  <div style="clear: both;"></div>
</header>

<div class="container">
  <form class="login" action="/login" method="POST">
    <div class="field">
      <label for="username">Username:</label>
      <input type="text" name="username">
    </div>
    <div class="field">
      <label for="password">Password:</label>
      <input type="password" name="password">
    </div>
    <% if (typeof message != "undefined") { %>
      <div class="error-message"><%= message %></div>
    <% } %>
    <div class="field">
      <input class="btn" type="submit" value="Log In">
    </div>
  </form>
  <div class="login">
    <p>¿Aún no tienes cuenta?</p>
    <a href="/signup">Sign up</a><br>
    <a href="/auth/facebook"><i class="fa fa-facebook-official" aria-hidden="true"></i>Login With Facebook</a><br>
    <a href="/auth/google"><i class="fa fa-google-plus-square" aria-hidden="true"></i>Login with Google</a><br>
  </div>
</div>
<script src="https://use.fontawesome.com/0c95e9c908.js"></script>
